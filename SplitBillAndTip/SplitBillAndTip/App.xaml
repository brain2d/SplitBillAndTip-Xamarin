<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SplitBillAndTip.App">
	<Application.Resources>

		<!-- Application resource dictionary -->
        <ResourceDictionary>
            <Color x:Key="backgroundColor">#ffe7d8</Color>
            <Color x:Key="textColor">White</Color>
            <Style x:Key="PeopleButtonNotPressed" TargetType="Button">
                <Setter Property="WidthRequest" Value= "60"/>
                <Setter Property="BackgroundColor" Value= "White"/>
            </Style>
            <Style x:Key="PeopleButtonPressed" TargetType="Button">
                <Setter Property="WidthRequest" Value= "60"/>
                <Setter Property="BackgroundColor" Value= "#f5ed69"/>
            </Style>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>